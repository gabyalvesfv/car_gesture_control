#include <WiFi.h>
#include <esp_now.h>
#include "esp_wifi.h"

typedef struct {
  int comando;
  int velocidade;
} struct_message;

struct_message msg;

// Fun√ß√£o de callback para recebimento de dados via ESP-NOW
void OnDataRecv(const esp_now_recv_info* info, const uint8_t *incomingData, int len) {
  Serial.println("‚ö° Dados recebidos via Wi-Fi!");
  memcpy(&msg, incomingData, sizeof(msg));

  Serial.print("üì• Recebido: ");
  Serial.print(msg.comando);
  Serial.print(",");
  Serial.println(msg.velocidade);

  // Envia para o Arduino (quando conectado √† Serial2)
  Serial2.print(msg.comando);
  Serial2.print(",");
  Serial2.println(msg.velocidade);
}

void setup() {
  Serial.begin(115200); // Monitor serial do PC
  Serial2.begin(9600, SERIAL_8N1, 16, 17); // GPIO17 (TX), GPIO16 (RX)

  WiFi.mode(WIFI_STA);

  // Define canal fixo
  esp_wifi_set_channel(1, WIFI_SECOND_CHAN_NONE);

  if (esp_now_init() != ESP_OK) {
    Serial.println("Erro ao iniciar ESP-NOW");
    return;
  }

  esp_now_register_recv_cb(OnDataRecv);  // Registra o callback com a assinatura correta
  Serial.println("üîé Aguardando mensagens via ESP-NOW...");
}

void loop() {
  delay(2000);
  Serial.println("‚è≥ Esperando mensagem...");
}
